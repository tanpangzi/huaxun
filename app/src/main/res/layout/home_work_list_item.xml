<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_list_item_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ck_liner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <CheckBox
                android:id="@+id/home_work_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/setting_homework_check"
                android:button="@null"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/bar_content_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/kc_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/kc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:maxLines="2"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="11111"
                android:textColor="@color/list_title_color"
                android:textSize="@dimen/bar_title_size" />

            <TextView
                android:id="@+id/kc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:text="22222222"
                android:textColor="@color/grey"
                android:textSize="@dimen/bar_data_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/kc_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/ck_liner"
            android:background="@drawable/yy"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>