<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical"
    android:paddingTop="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_time"
            android:layout_width="20dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/loc_time_sel"
            android:gravity="center"
            android:text="时段一"
            android:textColor="@color/white"
            android:textSize="@dimen/bar_title_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/text_time"
            android:background="@color/white" >

            <RelativeLayout
                android:id="@+id/sta_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_arrow" />

                <TextView
                    android:id="@+id/loc_hid_sta_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView1"
                    android:gravity="right"
                    android:text="0:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bar_content_size" />

                <TextView
                    android:id="@+id/loc_title_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="开始时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bar_content_size" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="@color/activity_bg" />

            <RelativeLayout
                android:id="@+id/end_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view1"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="结束时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bar_content_size" />

                <TextView
                    android:id="@+id/loc_hid_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView2"
                    android:gravity="right"
                    android:text="0:00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/bar_content_size" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>