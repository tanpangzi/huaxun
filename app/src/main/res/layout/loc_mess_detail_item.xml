<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/loc_detail_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="终端SIM卡号"
            android:textColor="@color/black"
            android:textSize="@dimen/bar_title_size" />

        <TextView
            android:id="@+id/loc_detail_content"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/loc_detail_title"
            android:gravity="left"
            android:text="广东省深圳市宝安区西乡臣田工业区宝田一路37栋华讯方舟移动宽带产业园"
            android:textColor="#8e8e93"
            android:textSize="@dimen/bar_content_size" />
    </RelativeLayout>

</LinearLayout>