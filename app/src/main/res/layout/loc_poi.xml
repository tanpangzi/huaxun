<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" >

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/poi_ed"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/loc_crawl_search_ed"
                android:drawableLeft="@drawable/loc_crawl_search_btn"
                android:gravity="center_vertical"
                android:hint="请输入地址"
                android:padding="7dp"
                android:textSize="@dimen/bar_content_size" />

            <Button
                android:id="@+id/poi_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:background="@drawable/btn_selector"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/bar_content_size" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/poi_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@color/md__transparent"
        android:divider="@color/activity_bg"
        android:dividerHeight="2dp"
        android:fadingEdge="none"
        android:scrollbars="none" />

</LinearLayout>